FROM node:20-alpine 
# использует образ Node.js версии 20 с Alpine Linux

WORKDIR /app
# Устанавливает рабочий каталог в контейнере

COPY package*.json ./
# Копирует файлы package.json и package-lock.json в рабочий каталог

RUN npm install
# Устанавливает зависимости проекта

COPY . .
# Копирует остальные файлы проекта в рабочий каталог

EXPOSE 3000
# Указывает порт, на котором будет работать приложение

CMD ["npm", "run", "start:dev"]
# Указывает команду, которая будет выполнена при запуске контейнера